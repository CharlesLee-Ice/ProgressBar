<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/dark"
    tools:context="com.learning.progress.MainActivity">

    <LinearLayout
        android:id="@+id/progress_bar_1_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner_background_1">
        <ProgressBar
            android:id="@+id/progress_bar_1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_src_01"
            android:max="100"
            android:progress="50"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_bar_2_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner_background_1">
        <ProgressBar
            android:id="@+id/progress_bar_2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="12dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_src_02"
            android:max="100"
            android:progress="50"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_bar_3_container"
        android:layout_width="206dp"
        android:layout_height="16dp"
        android:background="@drawable/round_corner_background_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/progress_bar_3"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/progress_src_03"
            android:orientation="horizontal"/>
    </LinearLayout>

    <com.learning.progress.ArcProgress
        android:id="@+id/progress_bar_4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/progress_bar_5"
            android:layout_width="16dp"
            android:layout_height="100dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_src_04"
            android:max="100"
            android:progress="50"/>
        <ImageView
            android:id="@+id/progress_bar_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:src="@drawable/progress_src_05"/>
    </LinearLayout>

</LinearLayout>
